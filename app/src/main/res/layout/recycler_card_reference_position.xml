<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/card_one"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/uuid_txt"/>
        <TextView
            android:id="@+id/uuid2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/card_one"
            android:paddingLeft="30sp"
            android:textSize="10sp"
            android:text="Hello" />
        <TextView
            android:id="@+id/card_two"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_below="@id/card_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/major_txt"/>
        <TextView
            android:id="@+id/major2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/card_one"
            android:paddingLeft="30sp"
            android:layout_below="@id/card_one"
            android:textSize="10sp"
            android:text="Major" />
        <TextView
            android:id="@+id/card_three"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_below="@id/card_two"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/minor_txt"/>
        <TextView
            android:id="@+id/minor2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/card_one"
            android:paddingLeft="30sp"
            android:textSize="10sp"
            android:layout_below="@id/card_two"
            android:text="Minor" />
        <TextView
            android:id="@+id/card_four"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_below="@id/card_three"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/distance_txt"/>
        <TextView
            android:id="@+id/distance2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/card_one"
            android:paddingLeft="30sp"
            android:textSize="10sp"
            android:layout_below="@id/card_three"
            android:text="Distance" />

        <TextView
            android:id="@+id/xTextCard"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/xCard"
            android:text="X : "/>
        <TextView
            android:id="@+id/xCard"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="NULL"/>
        <TextView
            android:id="@+id/yTextCard"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/xTextCard"
            android:layout_alignLeft="@id/xTextCard"
            android:text="Y : "/>
        <TextView
            android:id="@+id/yCard"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/yTextCard"
            android:layout_alignBottom="@id/yTextCard"
            android:text="NULL"/>
        <TextView
            android:id="@+id/zTextCard"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/yTextCard"
            android:layout_alignLeft="@id/xTextCard"
            android:text="Z : "/>
        <TextView
            android:id="@+id/zCard"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/zTextCard"
            android:layout_alignBottom="@id/zTextCard"
            android:text="NULL"/>
    </RelativeLayout>
</LinearLayout>